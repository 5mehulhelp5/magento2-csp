<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <csp>
            <general>
                <enabled_rules>1</enabled_rules>
                <enabled_reports>1</enabled_reports>
                <enable_header_splitting>0</enable_header_splitting>
                <max_header_size>4096</max_header_size>
            </general>
            <mode>
                <storefront>
                    <report_uri>https://dk-beautycos.hryvinskyi.com/csp_report_watch</report_uri>
                </storefront>
                <admin>
                    <report_uri>https://dk-beautycos.hryvinskyi.com/csp_report_watch;</report_uri>
                </admin>
            </mode>
            <policies>
                <storefront>
                    <frame-ancestors>
                        <inline>0</inline>
                    </frame-ancestors>
                </storefront>
                <admin>
                    <frame-ancestors>
                        <inline>0</inline>
                    </frame-ancestors>
                </admin>
            </policies>
        </csp>
    </default>
</config>
